<h1>Listing tags</h1>

<script type="text/javascript">
  jQuery(function($){
    $('.Destroy').click(function(){
      $(this).parent().parent().html('');
    });
  });
</script>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Destroy', tag, :method => :delete,:remote => true,:class =>"Destroy" %></td>
  </tr>
<% end %>
</table>