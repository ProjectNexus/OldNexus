<%= form_for @tag, :'data-type' => 'json', :remote => true do |f| %>
    <%= f.text_field :name %> <%= f.submit %>

  <%= fields_for @tag_link do |tag_field| %>
    <%= tag_field.text_field :taggable_id, :hidden => true %>
    <%= tag_field.text_field :taggable_type, :hidden => true %>
    <%= tag_field.text_field :tag_type, :hidden => true %>
  <% end %>

<% end %>
