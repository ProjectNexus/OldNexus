<h1>Listing resource_stocks</h1>

<table>
  <tr>
    <th>Resource</th>
    <th>Parent</th>
    <th>Quantity</th>
    <th>Demand</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resource_stocks.each do |resource_stock| %>
  <tr>
    <td><%= resource_stock.resource.name %></td>
    <td><%= link_to resource_stock.resourceable.name, [resource_stock.resourceable.goalable,resource_stock.resourceable] %></td>
    <td><%= resource_stock.quantity %></td>
    <td><%= resource_stock.demand %></td>
    <td><%= resource_stock.note %></td>
    <td><%= link_to 'Show', resource_stock %></td>
    <td><%= link_to 'Edit', edit_resource_stock_path(resource_stock) %></td>
    <td><%= link_to 'Destroy', resource_stock, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

